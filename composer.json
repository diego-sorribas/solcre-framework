{
  "name": "solcre/solcre-framework-2",
  "description": "Base stuff of many internal projects",
  "keywords": [
    "solcre",
    "framework"
  ],
  "license": "BSD-3-Clause",
  "require": {
    "php": "^7.3",
    "doctrine/doctrine-orm-module": "^2.1",
    "laminas-api-tools/api-tools-hal": "^1.6",
    "laminas-api-tools/api-tools-rest": "^1.5",
    "neitanod/forceutf8": "^2.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^2.16",
    "localheinz/composer-normalize": "^1.3",
    "phpmd/phpmd": "^2.7",
    "phpro/grumphp": "^0.16.2",
    "phpstan/phpstan": "^0.11.19",
    "phpunit/php-code-coverage": "^7.0",
    "phpunit/phpunit": "^8.4",
    "povils/phpmnd": "^2.1",
    "roave/security-advisories": "dev-master",
    "sebastian/phpcpd": "^4.1",
    "sensiolabs/security-checker": "^6.0",
    "squizlabs/php_codesniffer": "^3.5"
  },
  "autoload": {
    "psr-4": {
      "Solcre\\SolcreFramework2\\": "./src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "SolcreFrameworkTest\\": "./test/"
    }
  },
  "scripts": {
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "test": "phpunit"
  }
}
